<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Heading1">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Heading3">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Text1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Text2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Text3">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Text4">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Text5">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="LargeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">334dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/DarkRed</item>
    </style>

    <style name="DarkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">334dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">#1D1D1D</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#1D1D1D</item>
    </style>

    <style name="LightButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">334dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">#FAFAFA</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#FAFAFA</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>


    <style name="CustomCardCorners2" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners2</item>
    </style>

    <style name="ShapeAppearance_custom_corners2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
    </style>

    <style name="CalendarWidgetHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomCalendarView" parent="Theme.AppCompat">
        <item name="android:colorAccent">@color/DarkRed</item>
        <item name="android:selectedWeekBackgroundColor">@color/DarkRed</item>
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayText</item>
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
    </style>

    <style name="CalendarWeekDayText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CalendarDateText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>